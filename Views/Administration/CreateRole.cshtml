@model Mercado.Models.Account.CreateRoleViewModel
@{
    ViewBag.Title = "Nova Função";
}

<div class="container form-config">
    <h4>@ViewData["Title"]</h4>

    <form asp-action="CreateRole" method="post" class="mt-3">
        <hr />
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-floating mb-3">
            <input id="floatingInput" asp-for="RoleName" class="form-control" placeholder="Email" />
            <label for="floatingInput" asp-for="RoleName"></label>
            <span asp-validation-for="RoleName" class="text-danger"></span>
        </div>
        <button type="submit" class="custom-btn">
            <svg xmlns="http://www.w3.org/2000/svg" height="48" width="48"><path d="M18.9 36 7.4 24.5 9.85 22.05 18.9 31.1 38.1 11.9 40.55 14.35Z"/></svg>
            Criar
        </button>
        
    </form>
    <div class="back-list">
        <a class="back-list" asp-action="ListRole">
            <svg xmlns="http://www.w3.org/2000/svg" height="24" width="24"><path d="M12 20.1 3.9 12 12 3.9 13.625 5.5 8.275 10.85H20.1V13.15H8.275L13.625 18.5Z"/></svg>
            Votlar para Lista
        </a>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}