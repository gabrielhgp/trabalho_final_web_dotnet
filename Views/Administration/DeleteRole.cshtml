@using Microsoft.AspNetCore.Identity
@model IdentityRole
@{
    ViewData["Title"] = "Deletar Função";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div>
        <h4>@ViewData["Title"]</h4>
        <hr />
        <dl class="row">
            <dt class = "col-sm-2">
                Função
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.Name)
            </dd>
        </dl>
        
        <form asp-action="DeleteRole">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Confirmar" class="btn btn-danger" />
            <a class="back-list" asp-action="ListRole">
                <svg xmlns="http://www.w3.org/2000/svg" height="24" width="24"><path d="M12 20.1 3.9 12 12 3.9 13.625 5.5 8.275 10.85H20.1V13.15H8.275L13.625 18.5Z"/></svg>
                Voltar para Lista
            </a>
        </form>
    </div>
</div>
