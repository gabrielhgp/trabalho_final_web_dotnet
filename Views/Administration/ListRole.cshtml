@using Microsoft.AspNetCore.Identity
@model IEnumerable<IdentityRole>
@{
    ViewData["Title"] = "Funções";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container lists">
    <h1>Funções</h1>

    <p>
        <a class="custom-btn" asp-action="CreateRole">
            <svg xmlns="http://www.w3.org/2000/svg" height="40" width="40"><path d="M18.417 31.875V21.583H8.125V18.417H18.417V8.125H21.583V18.417H31.875V21.583H21.583V31.875Z"/></svg>
            Criar Função
        </a>
    </p>
    <table class="table">
        <thead class="bg-dark text-white">
            <tr>
                <th>
                    Nome
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td class="crud-button">
                        <a class="icon-edit" asp-action="EditRole" asp-route-id="@item.Id">
                            <svg xmlns="http://www.w3.org/2000/svg" height="40" width="40"><path d="M7.792 32.208H9.792L28.833 13.167L27.833 12.167L26.833 11.167L7.792 30.208ZM5 35V29.083L28.792 5.292Q29.583 4.5 30.771 4.521Q31.958 4.542 32.75 5.333L34.708 7.292Q35.5 8.125 35.5 9.271Q35.5 10.417 34.708 11.208L10.917 35ZM32.625 9.208 30.708 7.292ZM28.833 13.167 27.833 12.167 26.833 11.167 28.833 13.167Z"/></svg>
                        </a>
                        <a class="icon-delete" asp-action="DeleteRole" asp-route-id="@item.Id">
                            <svg xmlns="http://www.w3.org/2000/svg" height="40" width="40"><path d="M11.125 35Q10 35 9.188 34.167Q8.375 33.333 8.375 32.208V9.167H6.667V6.375H14.667V5H25.333V6.375H33.333V9.167H31.625V32.208Q31.625 33.333 30.812 34.167Q30 35 28.875 35ZM28.875 9.167H11.125V32.208Q11.125 32.208 11.125 32.208Q11.125 32.208 11.125 32.208H28.875Q28.875 32.208 28.875 32.208Q28.875 32.208 28.875 32.208ZM15.208 28.708H17.958V12.625H15.208ZM22.042 28.708H24.792V12.625H22.042ZM11.125 9.167V32.208Q11.125 32.208 11.125 32.208Q11.125 32.208 11.125 32.208Q11.125 32.208 11.125 32.208Q11.125 32.208 11.125 32.208Z"/></svg>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
