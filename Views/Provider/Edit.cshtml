@model Mercado.Models.Provider
@{
    ViewData["Title"] = "Editar Fornecedor";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container form-config">

    <h4>@ViewData["Title"]</h4>
    <hr />
    <form asp-action="Edit">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="Id" />
        <div class="form-floating">
            <input id="floatingInput" asp-for="Phone" class="form-control" placeholder="Phone" />
            <label for="floatingInput" asp-for="Phone"></label>
            <span asp-validation-for="Phone" class="text-danger"></span>
        </div>
        <div class="form-floating">
            <input id="floatingInput" asp-for="Company" class="form-control" placeholder="Company" />
            <label for="floatingInput" asp-for="Company"></label>
            <span asp-validation-for="Company" class="text-danger"></span>
        </div>
        <div class="form-floating">
            <input id="floatingInput" asp-for="Email" class="form-control" placeholder="Email" />
            <label for="floatingInput" asp-for="Email"></label>
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="form-floating">
            <input id="floatingInput" asp-for="Activity" class="form-control" placeholder="Activity" />
            <label for="floatingInput" asp-for="Activity"></label>
            <span asp-validation-for="Activity" class="text-danger"></span>
        </div>
        <div class="form-group">
            <button class="custom-btn" type="submit">Atualizar</button>
        </div>
    </form>

    <div>
        <a class="back-list" asp-action="Index">
            <svg xmlns="http://www.w3.org/2000/svg" height="24" width="24"><path d="M12 20.1 3.9 12 12 3.9 13.625 5.5 8.275 10.85H20.1V13.15H8.275L13.625 18.5Z"/></svg>
            Voltar para lista
        </a>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
