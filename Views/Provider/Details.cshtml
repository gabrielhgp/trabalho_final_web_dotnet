@model Mercado.Models.Provider
@{
    ViewData["Title"] = "Detalhes do fornecedor";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <h4>@ViewData["Title"]</h4>
    <hr />

    <table class="table">
        <tbody>
            <tr>
                <td class="col-sm-3 bg-dark text-white">
                    @Html.DisplayNameFor(model => model.Phone)
                </td>
                <td>
                    @Html.DisplayFor(model => model.Phone)
                </td>
            </tr>
            <tr>
                <td class="bg-dark text-white">
                    @Html.DisplayNameFor(model => model.Company)
                </td>
                <td>
                    @Html.DisplayFor(model => model.Company)
                </td>
            </tr>
            <tr>
                <td class="bg-dark text-white">
                    @Html.DisplayNameFor(model => model.Email)
                </td>
                <td>
                    @Html.DisplayFor(model => model.Email)
                </td>
            </tr>
            <tr>
                <td class="bg-dark text-white">
                    @Html.DisplayNameFor(model => model.Activity)
                </td>
                <td>
                    @Html.DisplayFor(model => model.Activity)
                </td>
            </tr>
        </tbody>
    </table>
    <div>
        <a class="custom-btn" asp-action="Edit" asp-route-id="@Model.Id">
            <svg xmlns="http://www.w3.org/2000/svg" height="40" width="40"><path d="M7.792 32.208H9.792L28.833 13.167L27.833 12.167L26.833 11.167L7.792 30.208ZM5 35V29.083L28.792 5.292Q29.583 4.5 30.771 4.521Q31.958 4.542 32.75 5.333L34.708 7.292Q35.5 8.125 35.5 9.271Q35.5 10.417 34.708 11.208L10.917 35ZM32.625 9.208 30.708 7.292ZM28.833 13.167 27.833 12.167 26.833 11.167 28.833 13.167Z"/></svg>
            Editar
        </a>
    </div>
        <a class="back-list" asp-action="Index">
            <svg xmlns="http://www.w3.org/2000/svg" height="24" width="24"><path d="M12 20.1 3.9 12 12 3.9 13.625 5.5 8.275 10.85H20.1V13.15H8.275L13.625 18.5Z"/></svg>
            Voltar para lista
        </a>
</div>
